{
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.ConsoleTheme::None, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "EmailCustom",
        "Args": {
          "fromEmail": "############",
          "toEmail": "############",
          "mailServer": "############",
          "port": "############",
          "enableSsl": "############",
          "userName": "############",
          "password": "############",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "batchPostingLimit": "1",
          "mailSubject": "Error",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "AppSettings": {
    "TempImportPath": "/srv/gamestatsappimport/temp/",
    "BaseWebPath": "/srv/gamestatsapp/wwwroot",
    "GameImageWebPath": "dist/images/gamecovers/",
    "ImageFileExt": "jpg",
    "MaxBulkRows": "500",
    "MaxMemorySizeBytes": "300000000",
    "MaxPageLimit": "100",
    "PullDelayMS": "1000",
    "ErrorPullDelayMS": "2000",
    "MaxRetryCount": "2"
  },
  "Auth": {
    "Twitch": {
      "ClientId": "############",
      "ClientSecret": "############"
    }
  },
  "ConnectionStrings": {
    "DBConnectionString": "Server=localhost;Uid=############;Pwd=############;Database=GameStatsApp;",
    "DemoDBConnectionString": "Server=localhost;Uid=############;Pwd=############;Database=GameStatsAppDemo;"
  } 
}







